{
  "name": "classprefixer",
  "displayName": "ClassPrefixer",
  "description": "Adds specified prefix to every class in specified class string",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jjachowski/class-prefixer"
  },
  "keywords": [
    "className",
    "React",
    "prefix",
    "JSX",
    "TSX",
    "Tailwind"
  ],
  "license": "MIT",
  "publisher": "Jakub Jachowski",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "classPrefixer.addPrefix",
        "title": "Add Class Prefix",
        "category": "ClassPrefixer"
      },
      {
        "command": "classPrefixer.removePrefix",
        "title": "Remove Class Prefix",
        "category": "ClassPrefixer"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "classPrefixer.addPrefix",
          "when": "editorLangId =~ /^(javascript|javascriptreact|typescript|typescriptreact)$/"
        },
        {
          "command": "classPrefixer.removePrefix",
          "when": "editorLangId =~ /^(javascript|javascriptreact|typescript|typescriptreact)$/"
        }
      ],
      "editor/context": [
        {
          "command": "classPrefixer.addPrefix",
          "group": "navigation@1",
          "when": "editorTextFocus && editorLangId =~ /^(javascript|javascriptreact|typescript|typescriptreact)$/"
        },
        {
          "command": "classPrefixer.removePrefix",
          "group": "navigation@2",
          "when": "editorTextFocus && editorLangId =~ /^(javascript|javascriptreact|typescript|typescriptreact)$/"
        }
      ]
    },
    "configuration": {
      "title": "ClassPrefixer",
      "properties": {
        "classPrefixer.prefix": {
          "type": "string",
          "default": "ssp:",
          "description": "Default prefix"
        },
        "classPrefixer.skipClasses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of classes to skip"
        },
        "classPrefixer.autoFormat": {
          "type": "boolean",
          "default": true,
          "description": "Format file after prefixing"
        },
        "classPrefixer.customPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*ClassName"
          ],
          "description": "Custom attribute patterns to process (use * as wildcard)"
        },
        "classPrefixer.useRegex": {
          "type": "boolean",
          "default": false,
          "description": "Enable customRegexPatterns (when false, customPatterns are used with '*' wildcard)"
        },
        "classPrefixer.customRegexPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "\\w+ClassName"
          ],
          "description": "Custom regex patterns for attribute names (only when useRegex is true)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "vsce": "^3.0.0"
  }
}
